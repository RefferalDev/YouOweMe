        "firebase-admin": "^8.11.0",
        "graphql": "^14.6.0",
        "graphql-firestore-subscriptions": "^1.0.1",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^0.17.6"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/node": "^13.13.2",
        "@types/graphql": "^14.5.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    }
}
